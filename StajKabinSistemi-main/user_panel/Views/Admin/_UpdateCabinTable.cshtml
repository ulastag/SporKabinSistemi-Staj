@model IEnumerable<user_panel.Data.Cabin>

@if (!Model.Any())
{
    <p>No cabins found.</p>
}
else
{
    foreach (var cabin in Model)
    {
        <div class="card mb-3 shadow-sm border-0 rounded-3">
            <div class="card-body">
                <h5 class="card-title text-primary mb-2">
                    📍 @cabin.District.City.Name / @cabin.District.Name
                </h5>
                <h6 class="card-subtitle mb-3 text-muted">
                    💰 Cost: @cabin.PricePerHour.ToString("C") per hour
                </h6>
                <p class="card-text text-secondary">@cabin.Description</p>

                <div class="d-flex justify-content-end mt-3">
                    <a asp-action="EditCabin" asp-controller="Admin" asp-route-id="@cabin.Id" class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil me-2"></i> Edit Cabin
                    </a>
                    <form asp-action="DeleteCabin" asp-controller="Admin" asp-route-id="@cabin.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-danger ms-2">
                            <i class="bi bi-trash me-2"></i> Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
}
