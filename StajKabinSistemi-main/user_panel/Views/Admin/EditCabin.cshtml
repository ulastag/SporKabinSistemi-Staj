@model user_panel.ViewModels.CabinInfoViewModel
@{
    ViewData["Title"] = "Edit Cabin";
}

<div class="container container-main-large">
    <div class="card-custom">
        <h2>Edit Cabin</h2>
        <h4 class="mt-4">Editing Cabin Details</h4>
        <hr style="border-color: var(--border-color);" />

        <form asp-action="EditCabin" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="CityId" class="form-label">City</label>
                <select asp-for="CityId" class="form-select" asp-items="ViewBag.Cities as List<SelectListItem>" id="citySelect" required></select>
                <span asp-validation-for="CityId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DistrictId" class="form-label">District</label>
                <select asp-for="DistrictId" class="form-select" asp-items="ViewBag.Districts as List<SelectListItem>" id="districtSelect" required></select>
                <span asp-validation-for="DistrictId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="3" required></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PricePerHour" class="form-label">Price Per Hour</label>
                <input asp-for="PricePerHour" type="number" step="0.01" class="form-control" required />
                <span asp-validation-for="PricePerHour" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="QrCode" class="form-label">QR Code</label>
                <textarea asp-for="QrCode" class="form-control" required></textarea>
                <span asp-validation-for="QrCode" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-start gap-2 mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-2"></i> Save Changes
                </button>
                <a asp-action="UpdateCabin" asp-controller="Admin" class="btn btn-secondary">
                    <i class="bi bi-x-circle me-2"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById("citySelect")?.addEventListener("change", function () {
            const cityId = this.value;
            fetch(`/Admin/GetDistrictsByCity/${cityId}`)
                .then(res => res.json())
                .then(data => {
                    const districtSelect = document.getElementById("districtSelect");
                    districtSelect.innerHTML = '';
                    data.forEach(d => {
                        const option = document.createElement("option");
                        option.value = d.value;
                        option.text = d.text;
                        districtSelect.appendChild(option);
                    });
                });
        });
    </script>
}
