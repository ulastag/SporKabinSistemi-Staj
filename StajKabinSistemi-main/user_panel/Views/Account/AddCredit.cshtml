@model user_panel.ViewModels.AddCreditViewModel
@{
    ViewData["Title"] = "Add Credit";
}

@section Styles {
    @* UserPanel ile aynı stil dosyasını kullanarak tutarlı bir görünüm sağlıyoruz *@
    <link rel="stylesheet" href="~/css/user-panel.css" asp-append-version="true" />
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card-custom mt-5">
            <h3 class="mb-4">@ViewData["Title"]</h3>

            <form asp-action="AddCredit" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Amount" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text">₺</span>
                        <input asp-for="Amount" class="form-control" placeholder="50.00" />
                    </div>
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <hr style="border-color: var(--border-color);" />
                <h5 class="text-muted mb-3">Payment Information</h5>

                <div class="mb-3">
                    <label asp-for="CardHolderName" class="form-label"></label>
                    <input asp-for="CardHolderName" class="form-control" />
                    <span asp-validation-for="CardHolderName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CardNumber" class="form-label"></label>
                    <input asp-for="CardNumber" class="form-control" placeholder="XXXX XXXX XXXX XXXX" />
                    <span asp-validation-for="CardNumber" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="ExpiryMonth" class="form-label"></label>
                        <input asp-for="ExpiryMonth" class="form-control" placeholder="MM" />
                        <span asp-validation-for="ExpiryMonth" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="ExpiryYear" class="form-label"></label>
                        <input asp-for="ExpiryYear" class="form-control" placeholder="YY" />
                        <span asp-validation-for="ExpiryYear" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="CVC" class="form-label"></label>
                    <input asp-for="CVC" class="form-control" placeholder="XXX" />
                    <span asp-validation-for="CVC" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                    <a asp-action="UserPanel" class="btn btn-secondary">Back to Panel</a>
                    <button type="submit" class="btn btn-primary">Pay & Add Credit</button>
                </div>
            </form>
        </div>
    </div>
</div>
