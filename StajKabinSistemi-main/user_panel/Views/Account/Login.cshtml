@model user_panel.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

@* YENİ EKLENEN BÖLÜM: login.css dosyasını sayfaya dahil eder *@
@section Styles {
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
}

<div class="container container-main">
    <div class="card-custom">
        <form asp-action="Login" method="post">
            <h3 class="text-center mb-4">Login to Your Account</h3>

            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="form-floating mb-3">
                <input asp-for="EmailOrPhone" class="form-control" placeholder="Email or Phone" autocomplete="username" />
                <label asp-for="EmailOrPhone">Email or Phone</label>
                <span asp-validation-for="EmailOrPhone" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" placeholder="Password" type="password" autocomplete="current-password" />
                <label asp-for="Password">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-2">Login</button>

            <div class="text-center mt-3">
                <a asp-action="Register">Don't have an account? Register here</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}