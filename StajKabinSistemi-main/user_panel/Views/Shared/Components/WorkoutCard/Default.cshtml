@model List<user_panel.ViewModels.WorkoutPreviewViewModel>

<div class="row">
    @foreach (var plan in Model) {
        <div class="col-md-4 mb-4">
            <div class="card h-100" style="background-color: #3d3d45; border-color: var(--border-color);">
                <img src="@plan.WorkoutImage"
                     class="card-img-top"
                     alt="@plan.WorkoutName"
                     style="object-fit: cover; height: 200px;" />

                <div class="card-body d-flex flex-column text-center">
                    
                    <h5 class="card-title text-white">@plan.WorkoutName</h5>
                    <p class="card-text text-light flex-grow-1">
                        @plan.WorkoutPreview
                    </p>

                    <div class="d-flex justify-content-center align-items-center gap-2">
                        <a asp-controller="Workout" asp-action="Index" asp-route-id="@plan.WorkoutId" class="btn btn-primary">
                            Details
                        </a>

                        @if (User.IsInRole("Admin")) {
                            <a asp-controller="Workout" asp-action="Update" asp-route-id="@plan.WorkoutId" class="btn btn-warning">
                                Update
                            </a>
                            <form asp-controller="Workout" asp-action="Delete" asp-route-id="@plan.WorkoutId" method="post" onsubmit="return confirm('Are you sure you want to delete this workout?');">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>