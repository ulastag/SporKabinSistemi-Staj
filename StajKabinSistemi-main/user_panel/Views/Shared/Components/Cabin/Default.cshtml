@model IEnumerable<user_panel.Data.Cabin>

<div class="row g-4" >
    @foreach (var cabin in Model) {
        <div class="col-md-3 cabin-card-container">
            <div class="card h-100" style="background-color: #3d3d45; border-color: var(--border-color);">
                <div class="card-body d-flex flex-column">
                    @{
                        var cityName = cabin.District?.City?.Name ?? "Bilinmeyen Şehir";
                        var districtName = cabin.District?.Name ?? "Bilinmeyen İlçe";
                        var description = cabin.Description ?? "Açıklama bulunamadı.";
                    }

                    <h5 class="card-title cabin-location" style="color: var(--brand-accent);">
                        @cityName / @districtName
                    </h5>

                    <p class="card-text text-light flex-grow-1 cabin-description">
                        @description
                    </p>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="fs-5 fw-bold" style="color: var(--text-light);">@cabin.PricePerHour.ToString("C")/hour</span>
                        <a asp-controller="Booking" asp-action="Details" asp-route-id="@cabin.Id" class="btn btn-primary">Details</a>
                    </div>

                    
                </div>
            </div>
        </div>
    }
</div>
